<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="DroidKitTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- EditText样式 -->
        <!-- 底部线 默认颜色 -->
        <item name="colorControlNormal">@color/lm_colorDivider</item>
        <!-- 底部线 EditText激活时颜色 -->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!-- 设置光标 -->
        <item name="android:textCursorDrawable">@drawable/lm_text_cursor_drawable</item>

        <item name="buttonBarPositiveButtonStyle">@style/positiveBtnStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/negativeBtnstyle</item>
    </style>

    <style name="IntroTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>

    </style>


    <!--确定按钮样式-->
    <style name="positiveBtnStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--取消按钮样式-->
    <style name="negativeBtnstyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#999999</item>
    </style>

</resources>
